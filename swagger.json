{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "Library API",
      "description": "API for a library application"
    },
    "host": "localhost:3000",
    "basePath": "/api",
    "schemes": ["http"],
    "paths": {
      "/books": {
        "get": {
          "summary": "Get all books",
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Book"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Create a new book",
          "parameters": [
            {
              "in": "body",
              "name": "book",
              "schema": {
                "$ref": "#/definitions/Book"
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Book created"
            }
          }
        }
      },
      "/books/{id}": {
        "get": {
          "summary": "Get a book by ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Successful response",
              "schema": {
                "$ref": "#/definitions/Book"
              }
            },
            "404": {
              "description": "Book not found"
            }
          }
        },
        "put": {
          "summary": "Update a book",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "in": "body",
              "name": "book",
              "schema": {
                "$ref": "#/definitions/Book"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Book updated"
            },
            "404": {
              "description": "Book not found"
            }
          }
        },
        "delete": {
          "summary": "Delete a book",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Book deleted"
            },
            "404": {
              "description": "Book not found"
            }
          }
        }
      }
    },
    "definitions": {
      "Book": {
        "type": "object",
        "required": ["title", "author", "publishedDate", "pages", "genre"],
        "properties": {
          "title": {
            "type": "string"
          },
          "author": {
            "type": "string"
          },
          "publishedDate": {
            "type": "string",
            "format": "date"
          },
          "pages": {
            "type": "integer"
          },
          "genre": {
            "type": "string"
          }
        }
      }
    }
  }
  